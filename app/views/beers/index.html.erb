<p id="notice"><%= notice %></p>

<h1>Listing Beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <% byebug if beer.brewery.nil? %>
      <tr>
        <td><%= link_to beer.name, beer_path(beer.id) %></td>
        <td><%= beer.style %></td>
        <td><%= link_to beer.brewery.name, brewery_path(beer.brewery_id) %></td>
        <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
        <td><%= link_to 'Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Beer', new_beer_path, class:'btn btn-primary'  %>
<%= link_to 'List of breweries', breweries_path, class:'btn btn-primary'  %>